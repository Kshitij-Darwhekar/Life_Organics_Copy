@model OrganicStore.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="DeleteProduct" method="post">
    <div class="form-group">
        <label for="productName">Select Product:</label>
        <select asp-for="name" class="form-control">
            <option value="">Select Product</option>
            @foreach (var product in ViewData["ProductNames"] as List<string>)
            {
                <option value="@product">@product</option>
            }
        </select>
    </div>

   

    <div style="margin-top: 5px;"></div>

    <div class="form-group">
        <button type="submit" style="background-color: #FF0000; padding: 10px 20px; font-size: 16px;" class="button-submit">Delete Product</button>
    </div>
</form>
